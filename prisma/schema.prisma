generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CustomerCareAgent {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  first_name   String?
  last_name      String?
  password String
  salt String
  is_active      Boolean     @default(false)
  @@map("customer care agents")
}
